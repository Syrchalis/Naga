  <ThingDef ParentName="BaseNagaGun">
    <defName>Gun_NagaRevolver</defName>
    <label>plasma revolver</label>
    <description>Plasma version of a standard revolver.</description>
    <graphicData>
      <texPath>Things/Weapon/NagaRevolver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
