<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef>
    <defName>NagaVenom</defName>
    <label>naga venom</label>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0, 0.75, 0)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>minor</label>
        <minSeverity>0.0</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.8</postFactor>
          </li>
        </capMods>
        <painOffset>0.2</painOffset>
      </li>
      <li>
        <label>major</label>
        <minSeverity>0.4</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.5</postFactor>
          </li>
        </capMods>
        <painOffset>0.4</painOffset>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
        <painOffset>0.6</painOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>HiddenNagaHediff</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>naga</label>
    <labelNoun>naga</labelNoun>
    <defaultLabelColor>(1,1,1)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
      <stages>
        <li>
          <becomeVisible>false</becomeVisible>
          <statOffsets>
            <ShootingAccuracyPawn>5</ShootingAccuracyPawn>
            <MeleeDodgeChance>10</MeleeDodgeChance>
          </statOffsets>
        </li>
      </stages>
  </HediffDef>

  <HediffDef>
		<defName>NagaShieldEmitter</defName>
		<label>naga shield emitter</label>
		<defaultLabelColor>(0.25 ,0.75, 0.375)</defaultLabelColor>
		<hediffClass>SyrNaga.ShieldHediff</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
        <becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
  
</Defs>